{
  "name": "npm-typescript-starter-template",
  "author": "himanshubhardwaz",
  "repository": "https://github.com/himanshubhardwaz/npm-typescript-starter-template",
  "description": "A typescript starter template for building scalable packages",
  "license": "MIT",
  "version": "0.0.14",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "tsc",
    "release": "tsup src/index.ts --format cjs,esm --dts && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "tsup": "^6.5.0",
    "typescript": "4.9.5"
  }
}
